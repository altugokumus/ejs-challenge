<h1>Home</h1>
<p><%= homeStarting %></p>

<div>
        <% posts.forEach(function(post) { %>
    <div>
        <% let length = 150; %>
        <% let newTitle = post.title; %>
        <% let newContent = post.content.substring(0,length); %>
        <h1><%= newTitle %></h1>
        <p><%= newContent+"..." %><a href="/posts/<%= newTitle %>"> Read More</a></p>
        
    </div>
    <% }); %>


