<%- include("partials/header") -%>

<h1>Compose</h1>    
<form action="/compose" method="post">
    <div class="form-group">
        <label class="form-label" for="titleValue">Title</label>
        <input class="form-control" type="text" name="titleValue">
    </div>
    <div class="form-group">
        <label class="form-label" for="postValue">Post</label>
        <textarea class="form-control" name="postValue" rows="8"></textarea>
    </div>
    <div>
        <button class="btn btn-primary mt-3" type="submit" value="">Publish</button>
    </div>
    
</form>


<%- include("partials/footer") -%>